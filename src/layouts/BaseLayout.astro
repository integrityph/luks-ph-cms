      href="/static/assets/vendors/tiny-slider/tiny-slider.min.css"
    />
    <link
      rel="stylesheet"
      href="/static/assets/vendors/reey-font/stylesheet.css"
    />
    <link
      rel="stylesheet"
      href="/static/assets/vendors/owl-carousel/owl.carousel.min.css"
