    <script
      is:inline
      src="/static/assets/vendors/circleType/jquery.lettering.min.js"></script>
    <script
      is:inline
      src="/static/assets/vendors/sidebar-content/jquery-sidebar-content.js"
    ></script>
    <script is:inline src="/static/assets/vendors/twenty-twenty/twentytwenty.js"
    ></script>
    <script
      is:inline
      src="/static/assets/vendors/twenty-twenty/jquery.event.move.js"></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"
      integrity="sha512-NqYds8su6jivy1/WLoW8x1tZMRD7/1ZfhWG/jcRQLOzV1k1rIODCpMgoBnar5QXshKJGV7vi0LXLNXPoFsM5Zg=="
      crossorigin="anonymous"
