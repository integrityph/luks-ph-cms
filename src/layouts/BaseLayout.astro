      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/static/assets/css/mellis.css" />
    <link rel="stylesheet" href="/static/assets/css/mellis-responsive.css" />
  </head>

  <body>
    <div class="preloader">
      <div class="preloader__image"></div>
    </div>
    <!-- /.preloader -->

    <div class="page-wrapper">
      <header class="main-header">
        <div class="main-header__top">
          <div class="main-header__top-wrapper">
            <div class="main-header__top-inner">
              <div class="main-header__top-left">
                <ul class="list-unstyled main-header__contact-list">
                  <li>
                    <div class="icon">
                      <i class="fas fa-envelope"></i>
                    </div>
                    <div class="text">
                      <p>
                        <a href="reservations@lukscare.com"
                          >reservations@lukscare.com</a>
                      </p>
                    </div>
                  </li>
                  <li>
                    <div class="icon">
                      <i class="fas fa-phone"></i>
                    </div>
                    <div class="text">
                      <p>
                        <a href="tel:09625660420"
                          >+63 9625660420 / +043 302 1022
                        </a>
                      </p>
                    </div>
                  </li>
                </ul>
              </div>
              <div class="main-header__top-right">
                <div class="main-header__social">
                  <!-- <a href="#"><i class="fab fa-twitter"></i></a> -->
                  <a href="https://www.facebook.com/lukshotelspa"
                    ><i class="fab fa-facebook"></i></a
                  >
                  <a href="https://www.instagram.com/luksspa.ph"
                    ><i class="fab fa-instagram"></i></a
                  >
                  <a href="https://www.tiktok.com/@luks.spa">
                    <i class="fab fa-tiktok"></i></a
                  >
                </div>
                <div class="main-header__btn-box">
                  <a href="/contact/" class="thm-btn main-header__btn"
                    >Book now</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <nav class="main-menu">
          <div class="main-menu__wrapper">
            <div class="main-menu__wrapper-inner">
              <div class="main-menu__left">
                <div class="main-menu__logo">
                  <!-- <a href="/dashboard/"><img src="/static/assets/images/resources/luks_spa.png" alt="" width="300" height="80"></a> -->
                  <!-- <a href="/dashboard/"><img src="/static/assets/images/resources/sample.png" alt="" width="200" height="90"></a> -->
                  <a href="/"
                    ><img
                      src="/static/assets/images/resources/LO.png"
                      alt=""
                    /></a
                  >
                </div>
              </div>
              <div class="main-menu__main-menu-box">
                <a href="#" class="mobile-nav__toggler"
                  ><i class="fa fa-bars"></i></a
                >
                <ul class="main-menu__list">
                  <li class={pathname === "/" ? "current" : null}>
                    <a href="/">Home </a>
                  </li>
                  <li class={pathname.startsWith("/services") || pathname.startsWith("/services") ? `dropdown current` : "dropdown"}>
                    <a href="/services/">Our Services</a>
                  </li>
                  <li class={pathname.startsWith("/gallery") ? "current" : null}>
                    <a href="/gallery/">Gallery</a>
                  </li>
                  <li class={pathname.startsWith("/contact") ? "current" : null}>
                    <a href="/contact/">Contact</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </header>

      <slot />

      <!--Site Footer Start-->
      <footer class="site-footer">
        <div class="site-footer__shape-1 float-bob-x">
          <img
            src="/static/assets/images/shapes/site-footer-shape-1.png"
            alt=""
          />
        </div>
        <div class="site-footer__shape-2 float-bob-y">
          <img
            src="/static/assets/images/shapes/site-footer-shape-2.png"
            alt=""
          />
        </div>
        <div class="container">
          <div class="site-footer__top">
            <div class="row">
              <div
                class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp"
                data-wow-delay="100ms"
              >
                <div class="footer-widget__column footer-widget__contact-box">
                  <div class="footer-widget__contact">
                    <a href="mailto:reservations@lukscare.com"
                      >reservations@lukscare.com</a
                    >
                    <a href="tel:09625660420"
                      >+63 9625660420 / +043 302 1022
                    </a>
                  </div>
                  <div class="footer-widget__contact-form-box">
                    <div>
                      <div class="footer-widget__contact-form-input-box">
                        <input
                          type="email"
                          placeholder="Email address"
                          name="EMAIL"
                        />

                        <a href="/contact/">
                          <button
                            type="submit"
                            class="footer-widget__newsletter-btn"
                            ><img
                              src="/static/assets/images/icon/paper-plan-icon 1.png"
                              alt=""
                            /></button
                          ></a
                        >
                      </div>
                    </div>
                    <div class="mc-form__response"></div>
                  </div>
                </div>
              </div>
              <div
                class="col-xl-2 col-lg-6 col-md-6 wow fadeInUp"
                data-wow-delay="200ms"
              >
                <div class="footer-widget__column footer-widget__links">
                  <div class="footer-widget__title-box">
                    <h4 class="footer-widget__title">Links</h4>
                  </div>
                  <ul class="footer-widget__links-list list-unstyled">
                    <li><a href="/">Home</a></li>
                    <li><a href="/services/">Services</a></li>
                    <li><a href="/gallery/">Gallery</a></li>
                    <li><a href="/contact/">Contact</a></li>
                  </ul>
                </div>
              </div>
              <div
                class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp"
                data-wow-delay="300ms"
              >
                <div class="footer-widget__column footer-widget__timing">
                  <div class="footer-widget__title-box">
                    <h4 class="footer-widget__title">Timing</h4>
                  </div>
                  <ul class="footer-widget__timing-list list-unstyled">
                    <li>Open Daily</li>
                    <li>9:00am - 9:00pm</li>
                  </ul>
                </div>
              </div>
              <div
                class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp"
                data-wow-delay="400ms"
              >
                <div class="footer-widget__column footer-widget__social-box">
                  <div class="site-footer__social">
                    <a href="https://www.facebook.com/lukshotelspa"
                      ><i class="fab fa-facebook"></i></a
                    >
                    <a href="https://www.instagram.com/luksspa.ph"
                      ><i class="fab fa-instagram"></i></a
                    >
                    <a href="https://www.tiktok.com/@luks.spa">
                      <i class="fab fa-tiktok"></i></a
                    >
                  </div>
                  <p>5 M.Pastor Ave, Batangas City, <br /> 4200 Batangas</p>
                </div>
              </div>
            </div>
          </div>
          <div class="site-footer__bottom">
            <div class="row">
              <div class="col-xl-12">
                <div
                  class="site-footer__bottom-inner"
                  style="display: flex; justify-content: center;"
                >
                  <p class="site-footer__bottom-text">
                    © Copyright {new Date().getFullYear()} by <a href="#"
                      >Luks Spa & Aesthetics</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <div class="mobile-nav__wrapper">
      <div class="mobile-nav__overlay mobile-nav__toggler"></div>
      <div class="mobile-nav__content">
        <span class="mobile-nav__close mobile-nav__toggler"
          ><i class="fa fa-times"></i></span
        >
        <div class="logo-box">
          <a href="/" aria-label="logo image"
            ><img
              src="/static/assets/images/resources/logo_spa_sm.png"
              width="130"
              alt=""
            /></a
          >
        </div>
        <div class="mobile-nav__container"></div>
        <ul class="mobile-nav__contact list-unstyled">
          <li>
            <i class="fa fa-envelope"></i>
            <a href="mailto:reservations@lukscare.com"
              >reservations@lukscare.com</a
            >
          </li>
          <li>
            <i class="fa fa-phone-alt"></i>
            <a href="tel:09625660420">+63 9625660420 / +043 302 1022 </a>
          </li>
        </ul>
        <div class="mobile-nav__top">
          <div class="mobile-nav__social">
            <a href="https://www.facebook.com/lukshotelspa"
              ><i class="fab fa-facebook"></i></a
            >
            <a href="https://www.instagram.com/luksspa.ph"
              ><i class="fab fa-instagram"></i></a
            >
            <a href="https://www.tiktok.com/@luks.spa">
              <i class="fab fa-tiktok"></i></a
            >
          </div>
        </div>
      </div>
    </div>

    <div class="search-popup">
      <div class="search-popup__overlay search-toggler"></div>
      <!-- /.search-popup__overlay -->
      <div class="search-popup__content">
        <form action="#">
          <label for="search" class="sr-only">search here</label
          ><!-- /.sr-only -->
          <input type="text" id="search" placeholder="Search Here..." />
          <button type="submit" aria-label="search submit" class="thm-btn">
            <i class="icon-magnifying-glass"></i>
          </button>
        </form>
      </div>
      <!-- /.search-popup__content -->
    </div>
    <!-- /.search-popup -->

    <a href="#" data-target="html" class="scroll-to-target scroll-to-top"
      ><i class="fa fa-angle-up"></i></a
    >

    <script is:inline src="/static/assets/vendors/jquery/jquery-3.6.0.min.js"
    ></script>
